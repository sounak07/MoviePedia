    </head>
<body>  
    <nav class="navbar navbar-inverse" id="navbar-scroll">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">MoviePedia</a>
        </div>
     </div>
    </nav>
    <div>
      <div class="container">
         <h1 class="page-header">Here What you Got!</h1>
         <% data["Search"].forEach(function(movie){ %>
            <div class="col-md-4 col-sm-6">
               <div class="thumbnail">
                  <% if (movie["Poster"]!="N/A") { %> 
                  <img src="<%= movie["Poster"] %>">
                  <% } else { %>
                    <img src="http://i.imgur.com/kntSEEW.jpg">
                  <% } %>  
               </div>
               <div class="caption">
                  <h3><strong>Title:</strong><%= movie["Title"] %></h6>
                  <h4><strong>Year of Release:</strong> <%= movie["Year"] %></h4>
                  <h5><strong>Type:</strong> <%= movie["Type"] %></h5>
                  <h5><strong>imdb-Id:</strong> <%= movie["imdbID"] %></h5>
               </div>
               
              <br>   
          </div>  
         
         <% }); %>
         
      </div> 
      
    <br>
    <footer>
          Made with &hearts; in India by <a href="https://www.facebook.com/sounak.gupta.7">Sounak for them.</a>
    </footer>
</body>


            




